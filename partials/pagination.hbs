<section class="pagination">
	<nav role="pagination">
		<div class="inner">
			{{#if prev}}
				<a href="{{pageUrl prev}}" class="button newer-posts"><i class="fa fa-caret-left fa-lg"></i> Newer posts</a>
			{{/if}}

			{{#if next}}
			<a href="{{pageUrl next}}" class="button older-posts">Older posts <i class="fa fa-caret-right fa-lg"></i></a>
			{{/if}}
		</div>
	</nav>
</section>
