{{!< default}}
{{#post}}
<nav>
	<div class="toggle-menu">
	    <div id="icon">
	        <div class="one"></div>
	        <div class="two"></div>
	        <div class="three"></div>
	    </div>
	    <div id="menu">
	        <ul>
	        	<li>
	            	<a href="http://www.twitter.com/info_dribba" target="_blank"><span><i class="fa fa-rocket"></i></span> Dribba</a> 
	            </li>
	            <li>
	            	<a href="http://www.twitter.com/info_dribba" target="_blank"><span><i class="fa fa-twitter"></i></span> Twitter</a> 
	            </li>
	            <li>
	            	<a href="feed://{{@blog.url}}/rss/"><span><i class="fa fa-rss"></i></span> RSS</a>
	            </li>                
	        </ul>
	    </div> 
	 </div>
</nav>

<header class="main-header {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">
	<div class="title">
		<a href="{{@blog.url}}">
			<h1>{{@blog.title}}</h1>
		</a>
		<p>{{@blog.description}}</p>
	</div>
</header>

<section class="posts">
		<article class="{{post_class}}">
			<div class="inner">
				<header class="header-post">
					<a href="{{@blog.url}}"><i class="fa fa-arrow-left"></i></a><br>
					<span class="meta-post">
						<time datetime="{{date format='YYYY-MM-DD'}}">{{date timeago="true"}}</time>
						- <a href="{{url}}#disqus_thread">Comments</a>
					</span>
					<h2 class="title-post">{{{title}}}</h2>
				</header>
				
				<section class="content-post">
					{{content}}
					<div class="post-tags">{{tags separator=""}}</div>
				</section>

				<footer class="footer-post">
					{{#author}}
					<section class="author-post">
						{{#if image}}
							<figure class="avatar">
								<img src="{{image}}" alt="{{name}}">
							</figure>
						{{/if}}

						<div class="bio">
							<span>Published by</span>
							<h4 class="author-name">
								<a href="{{url}}">{{name}}</a>
							</h4>
							{{#if bio}}
								<p>{{{bio}}}</p>
							{{/if}}
						</div>
					</section>
					{{/author}}

					<section class="share">
						<a href="https://twitter.com/share?text={{title}}&url={{url absolute="true"}}" class="fa fa-twitter" onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
							<span class="hidden">Twitter</span>
						</a>
						<a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" class="fa fa-facebook" onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
							<span class="hidden">Facebook</span>
						</a>
						<a href="http://www.linkedin.com/shareArticle?mini=true&url={{url absolute="true"}}" class="fa fa-linkedin" onclick="window.open(this.href, 'linkedin-share','width=580,height=296');return false;">
							<span class="hidden">LinkedIn</span>
						</a>

						</a>
					</section>
				</footer>

				<section class="comments-post">
					<div id="disqus_thread"></div>
					<script type="text/javascript">
					    var disqus_shortname = 'dribbadevelopmentconsulting'; // required: replace example with your forum shortname
					    var disqus_identifier = '{{post.id}}';
					 
					    /* * * DON'T EDIT BELOW THIS LINE * * */
					    (function() {
					        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
					        dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
					        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
					    })();
					</script>
					<noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments.</a></noscript>
				</section>
				{{/post}}
			</div>

		</article>
	</section>